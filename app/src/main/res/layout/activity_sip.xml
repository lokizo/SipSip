<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="loki.sipsip.Sip">

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+200"
        android:id="@+id/btn200"
        android:layout_alignTop="@+id/btn330"
        android:layout_centerHorizontal="true" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+50"
        android:id="@+id/btn50"
        android:layout_alignTop="@+id/btn200"
        android:layout_toStartOf="@+id/btn200" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="330"
        android:id="@+id/btn330"
        android:layout_below="@+id/statusPlus"
        android:layout_toEndOf="@+id/btn200"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0ml."
        android:id="@+id/statusPlus"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ok"
        android:id="@+id/btnOk"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/btn200"
        android:layout_alignStart="@+id/btnReset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnReset"
        android:layout_below="@+id/btnOk"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_below="@+id/btnReset"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
